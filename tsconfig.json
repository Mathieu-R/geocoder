{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "strict": true,
    "target": "ES2021"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./coverage",
    "./lib",
    "./node_modules",
    "./test"
  ]
}
